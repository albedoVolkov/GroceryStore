<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#D6D6D6"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/container_image_dish_store"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/image_1_dish_store"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginHorizontal="5dp"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/test_image"
            android:contentDescription="@string/dish_photo" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_view_1_dish_store"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:minHeight="18dp"
        android:text="Зеленый салат"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/container_image_dish_store"
        app:layout_constraintStart_toStartOf="@+id/container_image_dish_store"
        app:layout_constraintTop_toBottomOf="@+id/container_image_dish_store" />

</androidx.constraintlayout.widget.ConstraintLayout>