<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_constraint_return_password_check_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.loginActivity.ReturnPasswordCheckActivity">

    <LinearLayout
        android:id="@+id/linear_layout_check_code_activity"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginHorizontal="20dp"
        android:background="#F6F6F6"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_5_check_code_activity"
        app:layout_constraintVertical_bias="0.25">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_1_check_code_activity"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/textView_1_check_code_activity"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:hint="@string/upper_dote_string"
                android:textSize="40sp"
                android:inputType="numberDecimal"
                android:autofillHints="" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_2_check_code_activity"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/textView_2_check_code_activity"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:hint="@string/upper_dote_string"
                android:textSize="40sp"
                android:inputType="numberDecimal"
                android:autofillHints="" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_3_check_code_activity"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/textView_3_check_code_activity"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:hint="@string/upper_dote_string"
                android:textSize="40sp"
                android:inputType="numberDecimal"
                android:autofillHints="" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_4_check_code_activity"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/textView_4_check_code_activity"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:hint="@string/upper_dote_string"
                android:textSize="40sp"
                android:inputType="numberDecimal"
                android:autofillHints="" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_5_check_code_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/write_a_code_activity_return_password"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_6_check_code_activity"
        app:layout_constraintVertical_bias="0.04000002" />

    <TextView
        android:id="@+id/textView_6_check_code_activity"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/letter_code_activity_return_password"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <TextView
        android:id="@+id/textView_7_check_code_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/incorrect_code_activity_return_password"
        android:textColor="#FF1717"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linear_layout_check_code_activity"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="@+id/linear_layout_check_code_activity"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_check_code_activity"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:id="@+id/textView_8_check_code_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_code_again_activity_return_password"
        android:textColor="#2172FF"
        app:layout_constraintBottom_toBottomOf="@+id/textView_7_check_code_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/textView_7_check_code_activity"
        app:layout_constraintTop_toTopOf="@+id/textView_7_check_code_activity" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/textView14"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:padding="2dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:tint="#3B3B3B" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="#78AEFF"
        android:gravity="center"
        android:text="@string/check_a_code_activity_return_password"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_check_code_activity"
        app:layout_constraintVertical_bias="0.59000003" />

</androidx.constraintlayout.widget.ConstraintLayout>