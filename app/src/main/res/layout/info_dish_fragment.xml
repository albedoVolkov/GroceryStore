<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D000000"
    tools:context=".ui.InfoDishFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_info_dish_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_info_dish_fragment"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linear_layout_info_dish_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_image_info_dish_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_image_info_dish_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E4E4E4">

                        <ImageView
                            android:id="@+id/image_view_info_dish_fragment"
                            android:layout_width="294dp"
                            android:layout_height="201dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="1.0"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/view_1_info_dish_fragment"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:background="#FFFFFF"
                            android:foreground="@drawable/baseline_clear_24"
                            app:layout_constraintBottom_toBottomOf="@+id/image_view_info_dish_fragment"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/view_2_info_dish_fragment"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="#FFFFFF"
                            android:foreground="@drawable/heart_icon_foreground"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="1dp"
                            app:cardUseCompatPadding="true"
                            app:layout_constraintBottom_toBottomOf="@+id/view_1_info_dish_fragment"
                            app:layout_constraintEnd_toStartOf="@+id/view_1_info_dish_fragment"
                            app:layout_constraintHorizontal_bias="0.967"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/view_1_info_dish_fragment"
                            app:layout_constraintVertical_bias="0.0" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container_text_info_dish_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/button_onfp_dish_fragment"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                    <TextView
                        android:id="@+id/textView_1_info_dish_fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="799 Р"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@+id/textView_4_info_dish_fragment"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/textView_2_info_dish_fragment"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Рыба с овощами и рисом"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/textView_1_info_dish_fragment"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_3_info_dish_fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="560г"
                        android:textColor="@color/gray40"
                        app:layout_constraintBottom_toBottomOf="@+id/textView_1_info_dish_fragment"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.043"
                        app:layout_constraintStart_toEndOf="@+id/textView_1_info_dish_fragment"
                        app:layout_constraintTop_toTopOf="@+id/textView_1_info_dish_fragment"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/textView_4_info_dish_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:minHeight="90dp"
                        android:text="Рыба марированная со специями, лимонным соком"
                        android:textColor="@color/gray60"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/button_info_dish_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/button_info_dish_fragment_selector"
                    android:gravity="center"
                    android:text="Добавить в корзину "
                    android:textColor="@color/white" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>